                    <TriggerSet>
                        <TargetTrigger Type="User" />
                    </TriggerSet>
                </LoadTriggers>
                <FunctionAliases>
                    <FunctionAlias Name="LoadedDlls">
                        <AliasItem>
                            <Syntax>
                                <![CDATA[!LoadedDlls]]>
                            </Syntax>
                            <Description>
